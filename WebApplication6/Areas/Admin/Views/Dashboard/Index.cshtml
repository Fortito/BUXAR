@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-white shadow-lg">
                <div class="card-header">
                    <h4 class="mb-0">buXar Platform Snapshot</h4>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-dark text-light">
                            <strong>Total Games:</strong> @ViewBag.GameCount
                        </li>
                        <li class="list-group-item bg-dark text-light">
                            <strong>Total Orders:</strong> @ViewBag.OrderCount
                        </li>
                        <li class="list-group-item bg-dark text-light">
                            <strong>Registered Users:</strong> @ViewBag.UserCount
                        </li>
                        <li class="list-group-item bg-dark text-light">
                            <strong>Most Clicked Game:</strong> @ViewBag.MostClickedGame
                        </li>
                        <li class="list-group-item bg-dark text-light">
                            <strong>Latest Order Date:</strong> <span class="text-primary">@ViewBag.LatestOrderDate</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

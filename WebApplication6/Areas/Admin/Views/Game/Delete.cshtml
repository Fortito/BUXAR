@model Game

@{
    ViewData["Title"] = "Delete Game";
}

<h2>Are you sure you want to delete this game?</h2>

<div class="card mt-4" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>

        @if (Model.GameImages != null && Model.GameImages.Any())
        {
            <div class="mb-3">
                @foreach (var image in Model.GameImages)
                {
                    <img src="~/uploads/@image.ImageUrl" alt="Game Image" width="120" class="img-thumbnail me-2" />
                }
            </div>
        }

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.Id" />

            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
        </form>
    </div>
</div>
